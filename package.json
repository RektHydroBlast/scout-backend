{
  "name": "langgraph-backend",
  "version": "1.0.0",
  "description": "LangGraph.js backend server for AI Web3 Lens application",
  "main": "dist/server.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm run clean && tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean",
    "postbuild": "echo Build completed successfully",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "deploy": "pnpm run build && pnpm run start",
    "prod:build": "set NODE_ENV=production && pnpm run build",
    "prod:start": "set NODE_ENV=production && pnpm run start",
    "prod": "pnpm run prod:build && pnpm run prod:start",
    "docker:build": "docker build -t langgraph-backend .",
    "docker:run": "docker run -p 3001:3001 --env-file .env langgraph-backend",
    "docker:dev": "docker run -p 3001:3001 --env-file .env -v %cd%:/app langgraph-backend",
    "heroku-postbuild": "pnpm run build"
  },
  "dependencies": {
    "@langchain/core": "^0.3.0",
    "@langchain/groq": "^0.2.0",
    "@langchain/langgraph": "^0.2.0",
    "@langchain/mcp-adapters": "^0.5.2",
    "@langchain/openai": "^0.5.0",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
